                                            </div>
                                            <div style="margin-left: 2rem;">{{usage.getDifficultyScore()}}/5</div>
                                        </div>
                                    {% else %}
                                        <div class="col-xs-4 d-flex justify-center">
                                            <div>
                                                <i class="fa fa-star-o"></i>
                                                <i class="fa fa-star-o"></i>
                                                <i class="fa fa-star-o"></i>
                                                <i class="fa fa-star-o"></i>
                                                <i class="fa fa-star-o"></i>
                                            </div>
                                            <div style="margin-left: 2rem;">{{usage.getDifficultyScore()}}/5</div>
                                        </div>
                                {% endif %}                               
                        </div>
                        </div>                                
                        {% endif %}
                        {% endfor %}
                        {% endfor %}
                        {% if value != 1 %}
                        <div class="row response-row">
                            <div class="col-sm-12">
                                {%trans%}usage-table.no.usage{%endtrans%}
                            </div>
                        </div>
                        {%endif%}
                    </div>
                </div>
            </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>
</section>
</div>
</div>
