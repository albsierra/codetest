<label class="ct-input {{ inline is defined ? 'inline' : '' }}">
    {% if hideLabel != true %}
        {% block text %}
            <span>{{label}}</span>
        {% endblock %}
    {% endif %}
    {% block input %}
        <input
            placeholder="{{placeholder|default(label)}}"
            {% if id is defined %}
                id="{{id}}"
            {% endif %}
            {% if label is defined %}
                title="{{label}}"
            {% endif %}
            {% if name is defined %}
                name="{{name}}"
            {% endif %}
            {% if value is defined %}
                value="{{value}}"
            {% endif %}
            type="{{type|default('text')}}"
        >
    {% endblock %}
</label>