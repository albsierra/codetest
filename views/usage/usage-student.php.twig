                                                <i style="color: #fd4;" class="fas fa-star"></i>
                                                <i style="color: #fd4;" class="fas fa-star"></i>
                                                <i class="fa fa-star-o"></i>
                                                <i class="fa fa-star-o"></i>
                                            </div>
                                            <div style="margin-left: 2rem;">{{usage.getUnderstandabilityScore()}}/5</div>
                                        </div>
                                    {% elseif understandabilityValue == 4 %}
                                         <div class="col-xs-4 d-flex justify-center">
                                            <div>
                                                <i style="color: #fd4;" class="fas fa-star"></i>
                                                <i style="color: #fd4;" class="fas fa-star"></i>
                                                <i style="color: #fd4;" class="fas fa-star"></i>
                                                <i style="color: #fd4;" class="fas fa-star"></i>
