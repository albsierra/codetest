                                            </div>
                                            <div  style="margin-left: 2rem;">{{usage.getTimeScore()}}/5</div>
                                        </div>
                                    {% else %}
                                        <div class="col-xs-4 d-flex justify-center">
                                            <div>
                                                <i class="fa fa-star-o"></i>
                                                <i class="fa fa-star-o"></i>
                                                <i class="fa fa-star-o"></i>
                                                <i class="fa fa-star-o"></i>
                                                <i class="fa fa-star-o"></i>
                                            </div>
                                            <div style="margin-left: 2rem;">{{usage.getTimeScore()}}/5</div>
                                        </div>
